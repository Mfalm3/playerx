{
  "name": "playerx",
  "version": "0.0.0",
  "private": true,
  "description": "Playerx",
  "keywords": [],
  "homepage": "https://github.com/luwes/playerx#readme",
  "bugs": {
    "url": "https://github.com/luwes/playerx/issues"
  },
  "repository": "luwes/playerx",
  "license": "MIT",
  "author": "Wesley Luyten <me@wesleyluyten.com> (https://wesleyluyten.com)",
  "main": "index.js",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "run-p build:*",
    "build:demo": "yarn workspace playerx-demo build",
    "build:playerx": "yarn workspace playerx build",
    "coverage": "codecov",
    "dev": "run-p dev:* start livereload watch",
    "dev:demo": "yarn workspace playerx-demo dev",
    "dev:playerx": "yarn workspace playerx dev",
    "lint": "eslint packages/*/src",
    "start": "http-server -c-1 -p 8000",
    "test": "cross-env COVERAGE=true karma start",
    "watch": "run-p watch:*",
    "watch:css": "onchange 'packages/*/dist/*.css' -- npm run copy:css",
    "watch:js": "onchange 'packages/*/dist/*.js' -- npm run copy:js",
    "watch:html": "onchange 'packages/*/src/*.html' -- npm run copy:html",
    "copy": "run-p copy:*",
    "copy:css": "cp -r packages/playerx-demo/dist/*.css public/dist",
    "copy:js": "cp -r packages/playerx*/dist/*.js* public/dist",
    "copy:html": "cp -r packages/playerx-demo/src/index.html public",
    "livereload": "livereload public"
  },
  "devDependencies": {
    "@babel/core": "^7.8.4",
    "@babel/preset-env": "^7.8.4",
    "@rollup/plugin-node-resolve": "^7.1.1",
    "@webcomponents/custom-elements": "^1.3.2",
    "ansi-colors": "^4.1.1",
    "babel-plugin-transform-async-to-promises": "^0.8.15",
    "codecov": "^3.6.5",
    "cross-env": "^7.0.0",
    "eslint": "^6.8.0",
    "eslint-plugin-fp": "^2.3.0",
    "eslint-plugin-import": "^2.20.1",
    "faucet": "^0.0.1",
    "fs-extra": "^8.1.0",
    "http-server": "^0.12.1",
    "ispy": "^0.1.2",
    "karma": "^4.4.1",
    "karma-browserstack-launcher": "^1.5.1",
    "karma-chrome-launcher": "^3.0.0",
    "karma-coverage": "^2.0.1",
    "karma-rollup-preprocessor": "^7.0.3",
    "karma-sauce-launcher": "^1",
    "karma-tap": "^4.2.0",
    "karma-tap-pretty-reporter": "^4.2.0",
    "livereload": "^0.9.1",
    "minimist": "^1.2.0",
    "npm-run-all": "^4.1.5",
    "onchange": "^6.1.0",
    "prettier": "^1.16.4",
    "rollup": "^1.31.1",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-size": "^0.2.2",
    "rollup-plugin-terser": "^5.2.0",
    "tap-spec": "^5.0.0",
    "tape-browser": "^4.13.0"
  }
}
