{
  "name": "playerx",
  "version": "1.0.1",
  "description": "Playerx",
  "type": "module",
  "main": "src/playerx.js",
  "types": "src/playerx.d.ts",
  "exports": {
    ".": "./src/playerx.js",
    "./config": "./src/config/index.js"
  },
  "files": [
    "src"
  ],
  "workspaces": [
    "site"
  ],
  "scripts": {
    "build": "npm run build --workspace=site",
    "dev": "npx serve --cors -p 8000 src & npm run dev --workspace=site",
    "serve": "npm run serve --workspace=site",
    "lint": "eslint src/*/",
    "test": "npm run lint"
  },
  "repository": "luwes/playerx",
  "author": "Wesley Luyten <me@wesleyluyten.com> (https://wesleyluyten.com)",
  "license": "MIT",
  "homepage": "https://github.com/luwes/playerx#readme",
  "bugs": {
    "url": "https://github.com/luwes/playerx/issues"
  },
  "dependencies": {
    "super-media-element": "~1.2.5"
  },
  "devDependencies": {
    "eslint": "^8.32.0",
    "schema-dts": "^1.1.0",
    "typescript": "^4.9.4"
  },
  "prettier": {
    "tabWidth": 2,
    "singleQuote": true,
    "semi": true
  },
  "eslintConfig": {
    "root": true,
    "globals": {
      "globalThis": "writable"
    },
    "env": {
      "browser": true,
      "es6": true,
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:import/warnings"
    ],
    "parserOptions": {
      "ecmaVersion": 2022,
      "sourceType": "module"
    },
    "rules": {
      "no-shadow": "error"
    },
    "ignorePatterns": [
      "site/src/js/ga.js"
    ]
  }
}
